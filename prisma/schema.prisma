generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        

model Projects {
  id String @id @default(uuid())
  title String
  description String
  images String[]
  repoLink String
  deployLink String?
}

model SoftSkills {
  id String @id @default(uuid())
  skill String
  percent Float
  
}

model HardSkills {
  id String @id @default(uuid())
  skill String
  percent Float
  
}